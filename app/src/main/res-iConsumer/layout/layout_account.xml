<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme.Root">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        style="@style/AppTheme.ScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_padding_top"
            android:orientation="vertical"
            android:padding="@dimen/padding_standard">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:drawable/divider_horizontal_bright"
                android:dividerPadding="@dimen/divider_padding"
                android:orientation="vertical"
                android:showDividers="end">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/title_cash_back_activity"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/title_next_check"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:alpha="0.87" />

                    <TextView
                        android:id="@+id/userNextCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:paddingEnd="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:text="@string/format_donation_amount"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:textColor="@color/primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/padding_small"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:gravity="center_vertical|start"
                        android:text="@string/next_payment_date"
                        android:textAppearance="@style/AppTheme.TextAppearance.Thin"
                        android:layout_gravity="left|bottom"
                        android:id="@+id/nextPaymentDate"
                        android:alpha="0.54" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/title_cash_pending"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:alpha="0.87" />

                    <TextView
                        android:id="@+id/userCashPending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:paddingEnd="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:text="@string/format_donation_amount"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:textColor="@color/primary" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/title_payments"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:alpha="0.87" />

                    <TextView
                        android:id="@+id/userPayments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:paddingEnd="@dimen/padding_small"
                        android:paddingRight="@dimen/padding_small"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:text="@string/format_donation_amount"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:textColor="@color/primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/padding_small"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:gravity="center_vertical|start"
                        android:text="@string/join_date"
                        android:textAppearance="@style/AppTheme.TextAppearance.Thin"
                        android:layout_gravity="left|bottom"
                        android:id="@+id/joinDate"
                        android:alpha="0.54" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/paymentsFrame">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/title_payments"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:alpha="0.87"
                        android:textColor="@color/primary" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/ic_navigate_next_black_24dp"
                        android:alpha="0.54" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/shoppingReportFrame">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/shopping_report"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:id="@+id/shoppingReport"
                        android:alpha="0.87"
                        android:textColor="@color/primary" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/ic_navigate_next_black_24dp"
                        android:alpha="0.54" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/storeVisitsFrame">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/store_visits"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:id="@+id/storeVisits"
                        android:alpha="0.87"
                        android:textColor="@color/primary" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/ic_navigate_next_black_24dp"
                        android:alpha="0.54" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:drawable/divider_horizontal_bright"
                android:dividerPadding="@dimen/divider_padding"
                android:orientation="vertical"
                android:showDividers="end|beginning">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center_vertical"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/title_notification_settings"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/trending_deals_alerts"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:alpha="0.87" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/news_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:checked="false"
                        app:showText="false"
                        android:theme="@style/AppTheme.SwitchCompat"
                        app:theme="@style/AppTheme.SwitchCompat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/padding_small"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:gravity="center_vertical|start"
                        android:text="@string/notifications_trending_deals_alerts"
                        android:textAppearance="@style/AppTheme.TextAppearance.Thin"
                        android:layout_gravity="left|bottom"
                        android:allowUndo="false"
                        android:alpha="0.54" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/payments_alerts"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:alpha="0.87" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/purchase_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:checked="false"
                        app:showText="false"
                        android:theme="@style/AppTheme.SwitchCompat"
                        app:theme="@style/AppTheme.SwitchCompat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/padding_small"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:gravity="center_vertical|start"
                        android:text="@string/notifications_payments_alerts"
                        android:textAppearance="@style/AppTheme.TextAppearance.Thin"
                        android:layout_gravity="left|bottom"
                        android:id="@+id/textView2"
                        android:alpha="0.54" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_height"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:paddingStart="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_small"
                        android:text="@string/cash_back_alerts"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:alpha="0.87" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/special_switcher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:checked="false"
                        app:showText="false"
                        android:theme="@style/AppTheme.SwitchCompat"
                        app:theme="@style/AppTheme.SwitchCompat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/padding_small"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:gravity="center_vertical|start"
                        android:text="@string/notifications_cash_back_alerts"
                        android:textAppearance="@style/AppTheme.TextAppearance.Thin"
                        android:layout_gravity="left|bottom"
                        android:id="@+id/textView"
                        android:alpha="0.54" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="enterAlways"
            android:theme="@style/AppThemeOverlay.ToolbarPrimary" />
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>
