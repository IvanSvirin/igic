<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp">

<TextView
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
    android:maxLines="2"
        android:textAppearance="@style/AppTheme.TextAppearance"
    android:layout_alignBaseline="@+id/monthDay"
    android:layout_alignBottom="@+id/monthDay"
    android:layout_toRightOf="@+id/monthDay"
    android:layout_toEndOf="@+id/monthDay"
    android:layout_marginLeft="62dp"
    android:layout_marginStart="62dp" />

    <TextView
        android:id="@+id/storePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/AppTheme.TextAppearance"
        android:text="@string/format_donation_amount"
        android:textColor="@color/red"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monthDay"
        android:text="Exp."
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|center_vertical" />

</RelativeLayout>