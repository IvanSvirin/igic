<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sortDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/padding_standard"
        android:layout_marginRight="@dimen/padding_standard"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:background="@android:color/transparent"
        android:alpha="0.54" />

    <RelativeLayout
        style="@style/AppTheme.ListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sortColumn"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/padding_standard"
            android:paddingRight="@dimen/padding_standard"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:textAppearance="@style/AppTheme.TextAppearance"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/padding_standard"
            android:layout_toEndOf="@+id/sortColumn"
            android:layout_toRightOf="@+id/sortColumn"
            android:layout_toStartOf="@+id/shopCommission"
            android:layout_toLeftOf="@+id/shopCommission"
            android:maxLines="2"
            android:paddingEnd="@dimen/padding_standard"
            android:paddingRight="@dimen/padding_standard"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:textAppearance="@style/AppTheme.TextAppearance"
            android:alpha="0.87" />

        <TextView
            android:id="@+id/shopCommission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textAppearance="@style/AppTheme.TextAppearance"
            android:textColor="@color/red"
            android:alpha="0.87"
            android:layout_marginRight="32dp" />


    </RelativeLayout>


</LinearLayout>