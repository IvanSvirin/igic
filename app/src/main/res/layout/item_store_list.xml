<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.ListItem">

    <TextView
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginEnd="@dimen/listItem_text_delimiter"
        android:layout_marginRight="@dimen/listItem_text_delimiter"
        android:maxLines="2"
        android:textAppearance="@style/AppTheme.TextAppearance" />

    <TextView
        android:id="@+id/storeCommission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:singleLine="true"
        android:textAppearance="@style/AppTheme.TextAppearance"
        android:textColor="@color/red" />

</FrameLayout>