<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Root"
    tools:context=".ui.web.BrowserActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:id="@+id/navigation_panel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_web_navigation_panel"
        android:layout_alignParentBottom="true"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/navigate_back" />

        <ImageButton
            android:id="@+id/forward_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/navigate_forward" />

        <ImageButton
            android:id="@+id/refresh_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/ic_refresh_white_24dp" />

        <TextView
            android:id="@+id/dealsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:background="@drawable/ab_ic_buynow_coupon"
            android:src="@drawable/ic_full_screen"
            android:text="22 DEALS"
            android:textColor="@color/textColorPrimaryInverse"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigation_panel"
        android:layout_below="@id/toolbar"
        android:id="@+id/relativeLayout2">

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="-7dp"
            android:layout_marginTop="-7dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <WebView
            android:id="@+id/browser_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/progress_bar"
            android:foreground="?android:windowContentOverlay" />

    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/primary"
        android:layout_alignBottom="@+id/navigation_panel">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 of 23"
            android:id="@+id/pageNumber"
            android:textColor="@color/textColorPrimaryInverse"
            android:layout_alignTop="@+id/forwardButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forwardButton"
            android:layout_alignParentBottom="true"
            android:src="@drawable/navigate_forward"
            android:layout_toRightOf="@+id/pageNumber"
            android:layout_toEndOf="@+id/pageNumber"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:src="@drawable/navigate_back"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/pageNumber"
            android:layout_toStartOf="@+id/pageNumber"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastPage"
            android:src="@drawable/last_page"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/forwardButton"
            android:layout_toEndOf="@+id/forwardButton"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstPage"
            android:src="@drawable/first_page"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/backButton"
            android:layout_toStartOf="@+id/backButton"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expandButton"
            android:src="@drawable/ic_expand_more_white_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CODE"
            android:id="@+id/couponCode"
            android:background="@drawable/ab_ic_buynow_coupon"
            android:textColor="@color/textColorPrimaryInverse"
            android:layout_alignBottom="@+id/expandButton"
            android:layout_alignRight="@+id/pageNumber"
            android:layout_alignEnd="@+id/pageNumber"
            android:textSize="20dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/btn_shop_now"
            android:id="@+id/shopNowButton"
            android:layout_above="@+id/pageNumber"
            android:layout_centerHorizontal="true"
            android:background="@color/textColorPrimaryInverse"
            android:textColor="@color/primary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restrictions/Expire"
            android:id="@+id/restrictions"
            android:layout_above="@+id/shopNowButton"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:textColor="@color/textColorPrimaryInverse" />
    </RelativeLayout>
</RelativeLayout>